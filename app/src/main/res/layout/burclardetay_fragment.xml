<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="2.6"
        android:background="#410E0000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="14"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/burcGorsel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/burcAdiTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#5CFFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gezegenTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="#81000000"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/elementTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="#81000000"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mottoTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="0.85"
                    android:background="#81000000"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/burcTarihleriTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="#81000000"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:background="#2DFFFFFF"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            app:tabIndicatorColor="#3F51B5"
            app:tabTextColor="#9C27B0">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/fragment1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Günlük" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/fragment2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Haftalık" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/fragment3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Aylık" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/fragment4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yıllık" />


        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/detayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_weight="1" />


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>