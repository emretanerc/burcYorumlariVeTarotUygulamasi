<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="#395C5A5A"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/sozcukBaslik2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:background="#6D5C5A5A"
                    android:clickable="false"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:text="İsim Kader Sayısı nedir?"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isim1Sonuc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:text="Bir isimde yer alan her harfin karşılığında bir rakamsal değer söz konusudur. İsminizde yer alan harflere karşılık gelen rakamların toplamı ise sizin kişilik özelliğinizi göstermektedir. Yani rakamların toplamı ile elde ettiğiniz rakam sizin kişilik özelliklerinizi ortaya koyar."
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/isim1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="#2DFFFFFF"
                    android:ems="10"
                    android:fontFamily="@font/acme"
                    android:hint="İsim giriniz"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="#F3F3F3"
                    android:textColorHint="#77FBFAFA" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/acme"
                    android:text="İsim Kaderini Hesapla" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/isimSonucLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/sozcukBaslik"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="#6D5C5A5A"
                    android:clickable="false"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:lineSpacingExtra="12sp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isim1Sonuc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:clickable="false"
                    android:fontFamily="@font/acme"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="#FFFFFF"
                    app:srcCompat="@android:drawable/ic_menu_share" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>